---
import ButtonHeart from "./buttons/ButtonHeart.astro";

---

<section>
	<div class="wrapper">
		<div class="blurred-bg"></div>
		<picture></picture>
	</div>  
	<header>
		<h1 style="view-transition-name: asmodeo;" >Asmodeo</h1>
		<h2>ESCORTS VIP</h2>
	</header>
	<div class="landing_box_button" >
		<ButtonHeart/>
	</div>
	<span class="womans" />
	<img class="black-circle" src="./blackcircle.svg" alt="">
</section>

<style>
	section{
		display: grid;
		place-items: center;
	}
	.womans{
		pointer-events: none;
		z-index: 10;	
		margin-top:10px;
		margin-bottom: -200px;
		width: 90vw;
		height: 200px;
		background: url('./Asmodeo-Escorts-Vip.webp') center no-repeat;
		background-size: contain;
	}
	.wrapper {
		top: 80%;
		z-index: 0;
		position: relative;
	}
	.blurred-bg {
		position: absolute;
		top: 37%;
		left: 50%;
		width: 400px;
		height: 500px;
		transform: translate(-50%, -50%);
		background: url('/woman.webp') center no-repeat;
		background-size: contain;
		filter: blur(25px);
		z-index: 1;
	}
	picture {
		position: absolute;
		top: 37%;
		left: 50%;
		width: 400px;
		height: 500px;
		transform: translate(-50%, -50%);
		background: url('/woman.webp') center no-repeat;
		background-size: contain;
		z-index: 2;
		mask-image: linear-gradient(var(--third)10%,#00000000);
	}
	header{
		z-index: 2;
		display: grid;
		place-items: center;
		padding-bottom: 15px;
	}
	.landing_box_button{
		position: relative;
		padding-bottom: 10px;
		z-index: 3;
	}
	.black-circle{
		z-index: 1;
		position: absolute;
		left: 50%;
		top: 60%;
		transform: translateX(-50%);
		width: 980px;
		mask-image: linear-gradient(var(--third)55%,#00000000);
	}

	@media
		(width < 700px){
			.black-circle{
				width: 360px;
			}
			picture{
				width: 340px;
			}
			.blurred-bg{
				width: 340px;
			}
			h1{
				font-size: 80px;
			}
			.womans{
				height: 80px;
				margin-bottom: -100px;
			}
		}
</style>
